<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="6dp">
    <ImageView
            android:id="@+id/icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/photo_profile_empty"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="8.0dip" />
    <RelativeLayout android:paddingRight="8.0dip"
                    android:layout_width="0.0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7.0dip"
                    android:layout_toRightOf="@id/icon"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true">

        <TextView
                android:id="@+id/first"
                android:text="Buff Badger"
                android:textSize="17dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/second"
                android:layout_alignParentLeft="true"/>
        <TextView
                android:id="@+id/second"
                android:text="Sept 2013"
                android:textSize="17dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4.0dip"
                android:layout_alignBaseline="@id/first"
                android:layout_alignParentRight="true" />
        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_below="@id/first"
                android:layout_alignParentLeft="true">
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/third"
                        android:text="Useful"
                        android:textColor="#84c94d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4.0dip" />
                <ImageView android:layout_width="18dp" android:layout_height="18dp"
                           android:id="@+id/third_icon"
                           android:layout_below="@id/first"
                           android:layout_toRightOf="@id/third"
                           android:src="@drawable/checkmark_on"
                           android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/fourth"
                        android:text="Easy"
                        android:textColor="#ca664e"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4.0dip" />
                <ImageView android:layout_width="18dp" android:layout_height="18dp"
                           android:id="@+id/fourth_icon"
                           android:layout_below="@id/first"
                           android:layout_toRightOf="@id/third"
                           android:src="@drawable/checkmark_off"
                           android:layout_centerVertical="true"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical|right"
                    android:layout_weight="1">
                <TextView
                        android:id="@+id/fifth"
                        android:text="Liked It"
                        android:textColor="#84c94d"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4.0dip" />
                <ImageView android:layout_width="18dp" android:layout_height="18dp"
                           android:id="@+id/fifth_icon"
                           android:layout_below="@id/first"
                           android:layout_toRightOf="@id/third"
                           android:src="@drawable/checkmark_on"
                           android:layout_centerVertical="true"/>
            </LinearLayout>

        </LinearLayout>


    </RelativeLayout>



    <TextView android:id="@+id/review_text"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/review_bubble_top"
              android:text="I loved this course. You don't just learn about music, you also learn about American history, politics, psychology, etc. This isn't just a plain old music class, but a course that ties together a number of subjects into one big real picture. It's not a hard course, but it's not easy. If you attend every lecture, take good notes, and read the textbook every now and then, you'll do fine."
              android:layout_below="@id/icon"
              android:layout_alignParentLeft="true"/>
    <View
            android:id="@+id/thread_divider"
            android:background="#ffffffff"
            android:layout_width="0.0dp"
            android:layout_height="0.5dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />




</RelativeLayout>

