<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:id="@+id/radio_group_view">
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="List View"
                android:layout_marginRight="30dp"
                android:id="@+id/radio_list_view" android:checked="false"/>
        <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Week View"
                android:id="@+id/radio_week_view" android:checked="true" />
    </RadioGroup>


    <FrameLayout android:id="@+id/schedule_container"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="1"
                 android:orientation="vertical">
        <LinearLayout android:id="@+id/week_layout"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:orientation="vertical">
            <ImageView
                    android:id="@+id/image_schedule"
                    android:layout_width="match_parent"
                    android:layout_height="0dp" android:layout_weight="1"
                    android:src="@drawable/kitty"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/list_layout"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:visibility="gone"
                      android:orientation="vertical">
            <!-- TODO: implement list layout (listview with collapsible headers -->
        </LinearLayout>
    </FrameLayout>

    <TextView android:text="Click on a schedule entry to add an alarm"
              style="@style/Flow.TipBox"
              android:layout_marginTop="10dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp"
                  android:layout_marginLeft="25dp"
                  android:layout_marginRight="25dp" >
        <Button style="@style/Flow.StyledButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:text="Export Calendar"
                android:id="@+id/btn_export_calendar" />

        <Button style="@style/Flow.StyledButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Share"
                android:id="@+id/btn_share" />
    </LinearLayout>

</LinearLayout>